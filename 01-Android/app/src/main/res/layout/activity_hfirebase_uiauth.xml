<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HFirebaseUIAuth">

    <Button
        android:id="@+id/btn_login_firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        app:layout_constraintEnd_toEndOf="@+id/btn_logout_firebase"
        app:layout_constraintStart_toStartOf="@+id/btn_logout_firebase"
        tools:layout_editor_absoluteY="242dp" />

    <Button
        android:id="@+id/btn_logout_firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="355dp" />

    <TextView
        android:id="@+id/tv_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="168dp" />
</androidx.constraintlayout.widget.ConstraintLayout>