<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/papanoel">


    <EditText
        android:id="@+id/edtNuevaEdad"
        android:layout_width="201dp"
        android:layout_height="40dp"
        android:fontFamily="@font/subtitulos"
        android:hint="Nueva Edad"
        android:inputType="number"
        android:textColor="@color/color_vino_navidad"
        app:layout_constraintBottom_toTopOf="@+id/edtNuevoPeso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.744" />

    <EditText
        android:id="@+id/edtNuevoPeso"
        android:layout_width="231dp"
        android:layout_height="49dp"
        android:layout_marginBottom="408dp"
        android:fontFamily="@font/subtitulos"
        android:hint="Nuevo Peso"
        android:inputType="numberDecimal"
        android:textColor="@color/color_vino_navidad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#EFC889"
        android:fontFamily="@font/subtitulos"
        android:onClick="actualizarPapaNoel"
        android:text="Actualizar"
        android:textColor="@color/color_vino_navidad"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

</androidx.constraintlayout.widget.ConstraintLayout>
