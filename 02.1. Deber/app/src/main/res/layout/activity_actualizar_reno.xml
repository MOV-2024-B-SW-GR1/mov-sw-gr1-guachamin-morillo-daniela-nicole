<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/reno2">

<EditText
        android:id="@+id/edtNuevaEdadReno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva Edad"
        android:inputType="number" />

    <EditText
        android:id="@+id/edtNuevoPesoReno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Peso"
        android:inputType="numberDecimal" />

    <CheckBox
        android:id="@+id/chkNuevoLider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Es líder?" />

    <Button
        android:id="@+id/btnActualizarReno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_background"
        android:fontFamily="@font/subtitulos"
        android:onClick="actualizarReno"
        android:text="Actualizar"
        android:textColor="@color/color_rojo_navidad"
        android:textSize="20sp" />
</LinearLayout>
